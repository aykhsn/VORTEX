	            </a>
	            <% } %>
	        </div>
	    </div>
	    <div class="<%= siteName %>_button-wrapper <%= siteName %>_button-wrapper--right">
			<a href="" class="<%= siteName %>_button"><span>View More</span></a>
		</div>
	</div>
</section>
<section class="<%= siteName %>_block">
	<div class="<%= siteName %>_block-inner">
		<div class="<%= siteName %>_block-heading">
			<h1>For Engineer</h1>
		</div>
		<div class="<%= siteName %>_button-wrapper <%= siteName %>_button-wrapper--right">
			<a href="" class="<%= siteName %>_button"><span>View More</span></a>
		</div>
	</div>
</section>
</main>
<%- include( 'Components/_footer', { siteName:siteName } ); %>
</div>

<!-- Smooth Scroll -->
<script src="dist/js/smoothscroll.min.js"></script>

<!-- Loading -->
<script src="dist/js/loading.min.js"></script>

<!-- Hamburger -->
<script src="dist/js/slideMenu.min.js"></script>

<!-- Swiper -->
<script src="dist/js/swiper-bundle.min.js"></script>
<script>
	////////////////////
	// mySwiperCardSwitch
	////////////////////
	let mySwiperCardSwitch = null;
	const mediaQuery = window.matchMedia('(max-width: 1024px)');

	const checkBreakpoint = (e) => {
		if (e.matches) {
			initMySwiperCardSwitch();
		} else if (mySwiperCardSwitch) {
			mySwiperCardSwitch.destroy(false, true);
		}
	}

	const initMySwiperCardSwitch = () => {
		mySwiperCardSwitch = new Swiper('#mySwiperCardSwitch.swiper', {
			slidesPerView: 1,
			spaceBetween: 16,
			loop: false,
			speed: 1000,
			grabCursor: true,
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
			breakpoints: {
				600: {
					slidesPerView: 2,
				}
			},
		});
	};

	mediaQuery.addListener(checkBreakpoint);

	checkBreakpoint(mediaQuery);
</script>

</body>
</html>