<section class="<%= siteName %>_block <%= siteName %>_block--gray">
	<div class="<%= siteName %>_block-inner">
		<div class="<%= siteName %>_block-heading">
			<h1>Service</h1>
		</div>
		<div class="<%= siteName %>_card-row <%= siteName %>_card-row_half">
			<div>
